{
  "name": "@bifrost/mcp",
  "version": "1.0.0",
  "description": "MCP server for Bifrost - AI-powered route management",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "bifrost-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "node --watch dist/index.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bifrost/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.1.0"
  }
}
